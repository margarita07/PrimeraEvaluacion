<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/lblContador"
        android:layout_width="28dp"
        android:layout_height="78dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:gravity="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblContador"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Nombre"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/lblcodigo"
        android:textColor="#000000"
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/lblContador"
        android:text="SC15-I04-001" />

    <TextView
        android:id="@+id/lblmateria"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblcodigo"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/lblContador"
        android:text="Matematica"
        android:textSize="19sp"/>
    <TextView
        android:id="@+id/lblpromedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblcodigo"
        android:layout_toEndOf="@+id/lblmateria"
        android:text="6.0"
        android:textSize="19sp"
        android:textAlignment="textEnd"
        android:textColor="#000000" />
</RelativeLayout>